.nb-radio-button
  kind: block inline
  skin: group

.nb-radio-button .nb-radio-button__button
  skin: nested-group-item '.nb-button'

.nb-radio-button__radio
  kind: hidden visually

.nb-radio-button__radio:checked + .nb-button
  skin: button_checked

.nb-radio-button__radio:focus + .nb-button
  skin: button_focus
