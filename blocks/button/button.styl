/*
    Кнопка.
*/

nb-button()

  .nb-button
    display: inline-block
    margin: 0
    padding: 0
    outline: 0 auto

    cursor: default
    text-decoration: none

    text-align: center
    white-space: nowrap
    border: 0
    user-select: none
    position: relative
    font-family: $fontFamily

    color: #333
    background: none
    border-radius: 3px

    vertical-align: middle

  // фиксит выосту кнопки в ФФ
  // при использовании тега button
  .nb-button::-moz-focus-inner
    padding: 0
    border: 0

  .nb-button__text
    position: relative
    padding: 0 1em

  .nb-button
    .nb-icon
      margin-right: 7px

  .nb-button_only-icon
    .nb-icon
      position: absolute
      left: 50%
      top: 50%
      margin: -8px 0 0 -8px

    .nb-button__text
      width: 4px
      display: inline-block


  @import '_size'
  @import '_theme'
  @import '_disabled'
  @import '_checked'

nb-button()
