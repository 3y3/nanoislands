func nb-island(nodeset options) {
    island = {
        'content': ''
    }

    nb-block('island', nb-extend(island, options))

}

match .island nb {
    <div class="nb-island">
        apply . nb-main-attrs
        apply . nb-main-content
    </div>
}

match .island.padding nb-attrs {
    @class += ' nb-island_padding_{.}'
}

match .island.type nb-attrs {
    @class += ' nb-island_type_{.}'
}

match .island nb-content {
    .content
}