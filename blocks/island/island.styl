nb-island()
  .nb-island
    background: $background
    box-shadow: 0 0 0 1px rgba($foreground, 0.1), 0 6px 6px -4px rgba($foreground, 0.14)

  .nb-island_padding_s
    padding: $gapS

  .nb-island_padding_m
    padding: $gapM

  .nb-island_padding_l
    padding: $gapL

  .nb-island_inline
    display: inline-block

  .nb-island_fly
    box-shadow: 0 0 0 1px rgba($foreground, 0.1), 0 8px 25px -5px rgba($foreground, 0.25)

  .nb-island_fly-contrast
    box-shadow: 0 0 0 1px rgba($foreground, 0.5), 0 10px 12px -5px rgba($foreground, 0.5)

nb-island()
