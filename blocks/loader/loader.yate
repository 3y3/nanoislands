func nb-loader(nodeset options) {
    default = {
        'size': 'm'
    }

    nb-block('loader', nb-extend(default, options))
}

match .loader nb {
    <span class="nb-loader nb-loader_size_{.size}">
        apply . nb-main-attrs

        <span class="nb-loader__spinner">
            if .color {
                @class += " nb-loader__spinner_color_{.color}"
            }
        </span>
    </span>
}
