func nb-input-group(nodeset options) {
    default = {
        'input' : {
            'size': 's'
            'class': 'nb-input-group__input'
        }
        'button' : {
            'size': 's'
            'theme': 'normal'
            'class': 'nb-input-group__button'
        }
    }

    nb-block('input-group', nb-extend(default, options))
}

func nb-button-input-group(nodeset options) {
    default = {
        'button' : {
            'size': 's'
            'theme': 'normal'
            'class': 'nb-input-group__button'
        }
        'input' : {
            'size': 's'
            'class': 'nb-input-group__input'
        }
    }

    tmpInput = nb-extend(default.input, options.input)
    tmpButton = nb-extend(default.button, options.button)
    nb-block('input-group', nb-deep-extend(default.input, options.input))
}


match .input-group nb {
    <div>
        @class = 'nb-input-group'
        @data-nb = 'input-group'
        apply .* nb
    </div>
}