include '../nanoislands.yate'

match / {
    nb-button({
        "content": "Button"
        "id": "button"
    })

    nb-button({
        "content": "Disbaled button"
        "disabled": true()
        "id": "button-disabled"
    })

    nb-checkbox({
        "attrs": {
            "value": "my-value"
        }
        "content": "Button"
        "id": "checkbox"
    })

    nb-select({
        "disabled": true()
        "id": "select-disabled"
        "items": []
    })

    nb-input({
        "size": "s"
        "attrs": {
            "placeholder": "Please, enter your name"
        }
        "content": "Viktor"
        "id": "input"
        "name": "last-name"
    })
}
