nb-slider()

  $nb-slider__track-height = 6px

  .nb-slider
    display: inline-block

    width: 100%

    position: relative

  .nb-slider__track
  .nb-slider__interval
    display: block

    position: absolute
    top: 50%

    height: $nb-slider__track-height

    margin-top: -(@height / 2)

    border-radius: 3px

  .nb-slider__track
    left: 1px
    right: 1px
    bottom: 1px
    z-index: 1

    background: rgba($foreground, 0.07)

    box-shadow: inset 0 1px 3px rgba($foreground, 0.2), inset 0 0 1px rgba($foreground, 0.4), 0 1px 0 rgba($background, 0.2)

  .nb-slider__interval
    left: 0
    z-index: 2

    height: $nb-slider__track-height

    margin-left: 1px
    margin-right: -1px

    background: rgba(255, 236, 166, 0.4)

    box-shadow: inset 0 1px 7px rgba(30, 23, 0, 0.35)

  .nb-slider__interval:before
    position: absolute
    top: 1px
    left: 1px
    right: 1px
    bottom: 1px

    background: #ffeca6

    border-radius: 2px
    box-shadow: inset 0 1px 3px -1px rgba($foreground, 0.2) 

    content: ''

  .nb-slider__knob
    position: absolute
    top: 0
    z-index: 3

    height: 100%

  .nb-slider__knob_round
  .nb-slider__knob_round:before
    border-radius: 50%

  @import "_size"

nb-slider()
