func island-simple() {
    island = {
        'content': 'Остров миу-миу'
        'attrs': {
            'style': 'height: 100px; width: 200px'
        }
    }
    nb-island(island)
}


func island-padding() {
    island = {
        'content': 'Остров с паддингами и инлайном'
        'padding': 'l'
        'inline':  true()
    }
    nb-island(island)
}



func islands() {
    <div>
        <p>Острова: </p>
        island-simple()
        <br />
        island-padding()
    </div>
}