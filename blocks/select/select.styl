nb-select()

  .nb-select
    max-width: 100%
    display: inline-block

  .nb-select__fallback
    display: none


  .nb-select__button
    max-width: 100%

    cursor: default
    text-align: left

    vertical-align: top

  .nb-select .nb-button__text
    display: block
    overflow: hidden

    margin-right: 1em

    -o-text-overflow: ellipsis
    text-overflow: ellipsis

    background: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI4IiBoZWlnaHQ9IjgiPjxwb2x5Z29uIHBvaW50cz0iNy4xOTQsMiAzLjk5Niw1LjE5NSAwLjc5OSwyIDAsMi43OTkgMy45OTYsNi43OTQgNy45OTEsMi43OTkiLz48L3N2Zz4=") no-repeat scroll 100% 50% transparent

  .nb-select__popup
      width: auto

      -webkit-user-select: none
      -moz-user-select: none
      user-select: none
      margin: 0 1px

      -webkit-overflow-scrolling: touch /*LEGO-7899*/

  .nb-select__item
    cursor: default
    white-space: nowrap

  .nb-select__text
    -moz-box-sizing: border-box
    -moz-user-select: none
    display: inline-block
    max-width: 100%
    overflow-x: hidden
    overflow-y: hidden
    padding-bottom: 0
    padding-left: 1em
    padding-right: 2.5em
    padding-top: 0
    position: relative
    text-overflow: ellipsis
    vertical-align: top

  .nb-select__item_selected_yes .nb-select__text:after
    background-attachment: scroll
    background-clip: border-box
    background-color: transparent
    background-image: url("data:image/svg+xml;base64,")
    background-origin: padding-box
    background-position: 50% 50%
    background-repeat: no-repeat
    background-size: 100% auto
    content: ""
    height: 1em
    position: absolute
    right: 1em
    top: 0.4em
    width: 1.1em

  .i-ua_inlinesvg_no .nb-select__item_selected_yes .nb-select__text:after
    background-attachment: scroll
    background-clip: border-box
    background-color: transparent
    background-image: url("../../../../../i/8mHn_Rsr7nJcpTqMcpRQLGAlOAM.png")
    background-origin: padding-box
    background-position: 0 0
    background-repeat: no-repeat
    background-size: auto auto

  .nb-select__item_inner_yes .nb-select__text
    padding-left: 2em

  .nb-select__item_label_yes .nb-select__text
    font-weight: bold

  .nb-select__button
    cursor: default
    max-width: 100%
    text-align: left
    vertical-align: top

  .nb-select__list
    overflow-x: hidden
    overflow-y: hidden
    position: relative

  .nb-select__separator
    -moz-font-feature-settings: normal
    -moz-font-language-override: normal
    -x-system-font: none
    border-top-color: -moz-use-text-color
    border-top-style: solid
    border-top-width: 1px
    float: left
    font-family: a
    font-size: 0
    font-size-adjust: none
    font-stretch: normal
    font-style: normal
    font-variant: normal
    font-weight: normal
    line-height: 0
    margin-top: -1px
    position: relative
    width: 100%
    z-index: 3

  .nb-select__popup
    -moz-user-select: none
    width: auto

  .nb-select__popup .popup__content
    overflow-x: hidden
    overflow-y: auto
    padding-bottom: 0
    padding-left: 0
    padding-right: 0
    padding-top: 0

  .nb-select_size_m .nb-select__fallback
  .nb-select__popup_size_m .nb-select__item
    font-size: 15px
    line-height: 32px

  .nb-select_size_s .nb-select__fallback
  .nb-select__popup_size_s .nb-select__item
    font-size: 13px
    line-height: 28px


  .nb-select_theme_normal
  .nb-select__popup_theme_normal .nb-select__item
    font-family: Arial,sans-serif

  .nb-select__popup_theme_normal .nb-select__item_focused_yes
  .nb-select__popup_theme_normal .nb-select__item_hovered_yes
  .nb-select__popup_theme_normal .nb-select__item:hover
    background-color: #FFEBA0

  .nb-select__popup_theme_normal .nb-select__item_disabled_yes
    color: $foregroundMutedMore

  .nb-select__popup_theme_normal .nb-select__separator
    border-bottom-color: #DDDDDD
    border-left-color-ltr-source: physical
    border-left-color-rtl-source: physical
    border-left-color-value: #DDDDDD
    border-right-color-ltr-source: physical
    border-right-color-rtl-source: physical
    border-right-color-value: #DDDDDD
    border-top-color: #DDDDDD

