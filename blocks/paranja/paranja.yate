func nb-paranja(nodeset options) {
    default = {
        'theme': 'dark'
    }

    nb-block('paranja', nb-extend(default, options))
}

match .paranja nb {
    <div>
        apply . nb-main-attrs
        apply . nb-main-content
    </div>
}

match .paranja nb-attrs {
    @data-nb = 'paranja'
    @class = 'nb-paranja'
}

match .paranja.theme nb-attrs {
    @class += ' nb-paranja_theme_{.}'
}