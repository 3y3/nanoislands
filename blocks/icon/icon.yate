func nb-icon(icon) {
    default = {
        'icon': icon
        'size': 's'
    }

    nb-block('icon', default)
}

match .icon nb {
    <img src="//yandex.st/lego/_/La6qi18Z8LwgnZdsAr1qy1GwCwo.gif" class="nb-icon nb-icon_{.}" />
}

match .icon[.icon] nb {
    <img src="//yandex.st/lego/_/La6qi18Z8LwgnZdsAr1qy1GwCwo.gif" class="nb-icon nb-icon_{.icon} nb-icon_size_{.size}" />
}