nb-input()
  .nb-input
    padding: 0 8px

    max-width: 100%
    box-sizing: border-box

    background: none
    border: 0
    outline: 0 none
    position: relative
    z-index: 10

    if ie
      border: 1px solid #ccc;
      padding: 3px 8px

  .nb-input-box:before
    background: linear-gradient(rgba($foreground, 0.2), rgba($foreground, 0.4))

    content: ""

    position: absolute
    bottom: 0
    right: 0
    left: 0
    top: 0

  .nb-input-box input
    if ie
      background-color: #FFF;



  .nb-input-box:after
    background: $background
    bottom: 1px
    content: ""
    left: 1px
    position: absolute
    right: 1px
    top: 1px

  .nb-input-box
    position: relative
    display: inline-block
    box-sizing: border-box
    vertical-align: middle

  .nb-input-box.nb-input_focus
    box-shadow: inset 0 1px 5px rgba($foreground, 0.25), 0 1px 1px 0 rgba($background, 0.2), 0 0 6px 2px rgba(255, 204, 0, 0.7)

  .nb-input-box.nb-input_focus:after
    box-shadow: inset 0 1px 0 rgba($foreground, 0.1), 0 0 0 1px rgba(193, 154, 0, 0.2)

  .nb-input-box.nb-input_focus:before
    display: none

  .nb-input-box.nb-input_size_s input
    font-size: 13px

  .nb-input-box.nb-input_size_s
    line-height: 28px

  .nb-input-box.nb-input_size_m input
    font-size: 15px

  .nb-input-box.nb-input_size_m
    line-height: 32px

  .nb-input:after
    content: ''
    position: absolute
    z-index: 2
    top: 3px
    bottom: 1px
    right: 1px
    width: 36px
    background: red
    background: linear-gradient(left, rgba($background, 0) 0, $background 20%)

