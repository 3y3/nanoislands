/*
    Кнопка.
*/

nb-button()

  .nb-button
    display: inline-block
    margin: 0
    padding: 0
    outline: 0 auto

    cursor: default
    text-decoration: none

    text-align: center
    white-space: nowrap
    border: 0
    user-select: none
    position: relative
    font-family: $fontFamily

    color: #333
    background: none
    border-radius: 3px

    vertical-align: middle

  // фиксит выосту кнопки в ФФ
  // при использовании тега button
  .nb-button::-moz-focus-inner
    padding: 0
    border: 0

  .nb-button__text
    position: relative
    padding: 0 1em




  @import '_size'
  @import '_theme'
  @import '_disabled'
  @import '_checked'

nb-button()
