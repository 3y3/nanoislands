.nb-dialog
  position: absolute
  z-index: 100

  min-width: 400px

.nb-dialog__header
  padding: 0 $gapM
  height: 50px
  line-height: @height

  background: $backgroundPrimary
  border-bottom: 1px solid darken($background, 16%)

.nb-dialog__close
  float: right
  opacity: 0.3

.nb-dialog__close:hover
  opacity: 1
  filter: none

.nb-dialog__content
.nb-dialog__actions
  padding: $gapS $gapM

.nb-dialog__actions
  margin-top: -1px
  padding-top: $gapS + 1px

.nb-dialog__pull_right
  float: right

@import '_theme'
