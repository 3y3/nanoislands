nb-icon()

  .nb-icon
    border: none
    font: 0/0 a

    width: 16px
    height: 16px

    background-repeat: no-repeat
    background-position: 50% 50%

    position: relative
    top: 3px

  $svg-icons = \
    close_16 link_16 download_16 eye_16 trash_16 \
    three-dots_16 play_16 mail_16 \
    vk twitter odnoklassniki

  for $icon in $svg-icons
    .nb-icon_{$icon}
      background-image: url('/libs/nanoislands/blocks/icon/' + $icon + '.svg')

nb-icon()