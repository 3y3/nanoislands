.nb-input_type_simple
  kind: input
  skin: input

  &.nb-input_size_s
    skin: input small
    // reset default styles for <input type="search"/>
    -webkit-appearance: textfield

  &.nb-input_size_l
    skin: input large
    // reset default styles for <input type="search"/>
    -webkit-appearance: textfield

  &.nb-is-focused
    skin: input_focus

.nb-input_type_complex
  kind: field $islands_s $islands_s
  skin: input-box

  &.nb-input_size_s
    skin: input-box small

  .nb-input__content
    kind: field-content

  .nb-input__controller
    kind: input
    z-index: 9
    width: 100%
    height: 100%

  & textarea.nb-input__controller
    vertical-align: top
    resize: none

  .nb-input__view
    border: 1px solid transparent
    kind: fill -1px
    skin: input-view no-focus

  &:not(.nb-is-disabled):focus .nb-input__view
  &:not(.nb-is-disabled).nb-is-focused .nb-input__view
    skin: input_focus

  .nb-input__reset
    kind: field-right 0.5*$islands_s
    skin: icon _remove with-hover
    margin-right: $islands_s * -1
    height: auto

    &:before
      content: "Â " // utf nbsp here

  .nb-input__left
    kind: field-left 0.5*$islands_s
    margin-left: $islands_s * -1
    height: auto

  .nb-input__right
    kind: field-right 0.5*$islands_s
    margin-right: $islands_s * -1
    height: auto

  &.is-ghost:not(.nb-is-focused) .nb-input__view
    border: none
    background: none
    box-shadow: none

  .nb-input__hint
    // In quotes, 'cause there is conflict with nib's input function
    skin: 'input-placeholder' (-inner '&-inner') (-ghost '&-ghost')

.nb-input_size_s
  .nb-input__hint-inner
    line-height: $islands_m
    font-size: $islands_text_s

.nb-input.is-wrong
  skin: input_error



