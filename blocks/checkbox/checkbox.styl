nb-checkbox()

  $checkbox-size-M = 16px

  .nb-checkbox
    display: inline-block

    position: relative

    font: $font-p1

    text-shadow: 0 1px rgba($background, 0.2)
    user-select: none

  .nb-checkbox__input
    display: none

    user-select: none
    appearance: none

  .nb-checkbox__flag
    display: inline-block

    position: relative

    width: $checkbox-size-M
    height: $checkbox-size-M

    background: linear-gradient(rgba($foreground, 0.2), rgba($foreground, 0.38))

    vertical-align: middle

    &:before
    &:after
      display: block

      position: absolute

      content: ''

    &:before
      top: 1px
      left: 1px
      right: 1px
      bottom: 1px

      background: linear-gradient($background, #eee)

  .nb-checkbox_type_checkbox .nb-checkbox__flag
    border-radius: 3px

    &:before
      border-radius: 2px

    &:after
      width: $checkbox-size-M - 2px
      height: ($checkbox-size-M / 2) - 3px

      transform: translate(1.5px, -0.5px) rotate(130deg) scale(0.9) skew(-10deg)

      border: solid transparent
      border-width: 3px 3px 0 0

  .nb-checkbox_type_radio .nb-checkbox__flag
    border-radius: 100%

    &:before
    &:after
      border-radius: 100%

    &:after
      top: 50%
      left: 50%

      margin: -3px 0 0 -3px
      width: 6px
      height: 6px

  .nb-checkbox__input:checked + .nb-checkbox__flag
    background: rgba(255, 236, 166, 0.4)

    box-shadow: 0 1px 7px rgba(30, 23, 0, 0.8) inset, 0 2px 0 -1px rgba($background, 0.2)

  .nb-checkbox__input:checked + .nb-checkbox__flag:before
    background: linear-gradient(#ffeca6, #fff6d5)

    box-shadow: 0 1px 3px -1px rgba($foreground, 0.45) inset

  .nb-checkbox_type_radio .nb-checkbox__input:checked + .nb-checkbox__flag:after
    background: #333

  .nb-checkbox_type_checkbox .nb-checkbox__input:checked + .nb-checkbox__flag:after
    border-color: rgba($foreground, 0.85)

  .nb-checkbox__label
    margin-left: 0.5em
    display: inline-block
    vertical-align: middle

  @import _size

nb-checkbox()
