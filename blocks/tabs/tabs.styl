.nb-tabs
  kind: block
  skin: tabs

.nb-tabs__tab
  reset('li')
  kind: block inline

.nb-tabs__link
  skin: tabs-item
  kind: block

.ui-state-active .nb-tabs__link,
.ui-state-active:hover .nb-tabs__link
  skin: tabs-item_selected

.nb-tabs_size_s
  kind: block
  skin: tabs small

.nb-tabs_rise_s,
.nb-tabs_rise_m,
.nb-tabs_rise_l
  margin-top: -1*$islands_m
  margin-bottom: $islands_s
