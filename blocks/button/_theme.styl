nb-button_theme()

  // кастомизация цветов
  .nb-button
    color: #333
    box-shadow: 0 1px 0 rgba(#000, 0.07)

    border-radius: 3px

    background: #fff
    background: linear-gradient(rgba(#000, 0.2) 0%, rgba(#000, 0.4) 100%)

  .nb-button:before
    border-radius: 2px

    background: #eee
    background: linear-gradient(rgba(#fff) 0%, rgba(#eee) 100%)

  .nb-button:active
    box-shadow: 0 2px 1px -1px rgba(0, 0, 0, 0.4) inset, 0 1px 0 rgba(255, 255, 255, 0.2)

  .nb-button:active:before
    box-shadow: 0 1px 3px -1px rgba(0, 0, 0, 0.5) inset

  .nb-button__text
    position: relative
    padding: 0 1em

  .nb-button:active .nb-button__text
    top: 1px



  .nb-button_theme_action
    background: linear-gradient(rgba(96, 64, 0, 0.4) 0%, rgba(70, 47, 0, 0.54) 100%)

  .nb-button_theme_action:before
    background: linear-gradient(#FFDF60 0%, #FFCC00 100%)




  .nb-button_theme_pseudo
    background: none
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.2)
    cursor: pointer

  .nb-button_theme_pseudo .nb-button__text
      padding: 0 0.78em

  .nb-button_theme_pseudo:before
    background: none

  .nb-button_theme_pseudo:active
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.2)

  .nb-button_theme_pseudo:active:before
    box-shadow: none

  .nb-button_theme_pseudo:active .nb-button__text
    top: 0

  .nb-button_disabled .nb-button_theme_pseudo
    cursor: default









nb-button_theme()