nb-slider()

  $nb-slider__track-height = 6px

  .nb-slider
    display: inline-block

    width: 100%

    position: relative

    .nb-slider__track
      display: block

      height: 100%

    &:before
    .ui-slider-range
      display: block

      position: absolute
      top: 50%

      height: $nb-slider__track-height

      margin-top: -(@height / 2)

      border-radius: 3px

    &:before
      content: ''
      left: 1px
      right: 1px
      bottom: 1px
      z-index: 1

      background: rgba($foreground, 0.07)

      box-shadow: inset 0 1px 3px rgba($foreground, 0.2), inset 0 0 1px rgba($foreground, 0.4), 0 1px 0 rgba($background, 0.2)

    div.ui-slider-range

      height: $nb-slider__track-height

      margin-left: 1px
      margin-right: -1px

      background: rgba(255,236,166,.4)
      box-shadow: inset 0 1px 7px rgba(30,23,0,.35)

    .ui-slider-range:before

      background: #ffeca6

      border-radius: 2px
      box-shadow: inset 0 1px 3px -1px rgba($foreground, 0.2)

      content: ''

    .nb-slider__range
    .nb-slider__handle
      position: absolute
      top: 0
      z-index: 3

      line-height: 2

    .nb-slider__range
      left: 0
      right: 0

    .nb-slider__handle_round
    .nb-slider__handle_round:before
      border-radius: 50%

  @import "_size"

nb-slider()
