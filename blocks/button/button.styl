nb-button()

  .nb-button
    display: inline-block
    margin: 0
    padding: 0
    outline: 0 auto
    cursor: default

    text-align: center
    white-space: nowrap
    border: 0 none
    user-select: none
    position: relative
    font-family: $fontFamily
    box-shadow: 0 1px 0 rgba(#000, 0.07)

  // фиксит выосту кнопки в ФФ
  // при использовании тега button
  .nb-button::-moz-focus-inner
    padding: 0
    border: 0


  .nb-button__text
    position: relative
    padding: 0 1em



  // кастомизация цветов
  .nb-button
    color: #333
    border-radius: 3px

    background: linear-gradient(rgba(#000, 0.2) 0, rgba(#000, 0.4) 100%)

  .nb-button:before
    content: ""
    bottom: 1px
    left: 1px
    right: 1px
    top: 1px
    position: absolute
    border-radius: 2px
    background: linear-gradient(rgba(#fff) 0, rgba(#eee) 100%)

  .nb-button:active
    box-shadow: 0 2px 1px -1px rgba(0, 0, 0, 0.4) inset, 0 1px 0 rgba(255, 255, 255, 0.2)

  .nb-button:active:before
    box-shadow: 0 1px 3px -1px rgba(0, 0, 0, 0.5) inset

  .nb-button:active .nb-button__text
    top: 1px

  // кастомизация размеров


  .nb-button_size_m
    line-height: 32px
    font-size: 15px
    text-decoration: none


